---
import { SITE_CONFIG } from "@/config/site";

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [{
    "@type": "ListItem",
    "position": 1,
    "name": "Inicio",
    "item": SITE_CONFIG.url
  }]
};
---

<script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
