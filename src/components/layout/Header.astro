---
import { SITE_CONFIG } from "@/config/site";
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white shadow-md">
  <nav class="container-custom">
    <div class="flex items-center justify-center md:justify-between h-20 relative">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <img
          src="/images/fiveicon.png"
          alt="Auxilios FC Logo"
          class="h-30 w-auto transition-transform group-hover:scale-105"
          width="190"
          height="100"
        />
      </a>
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-6">
        <a href="/#servicios" class="text-secondary hover:text-primary transition-colors font-medium">
          Servicios
        </a>
        <a href="/#nosotros" class="text-secondary hover:text-primary transition-colors font-medium">
          Nosotros
        </a>
        <a href="/blog" class="text-secondary hover:text-primary transition-colors font-medium">
          Blog
        </a>
        <a href="/#testimonios" class="text-secondary hover:text-primary transition-colors font-medium">
          Testimonios
        </a>
        <a href="/#contacto" class="text-secondary hover:text-primary transition-colors font-medium">
          Contacto
        </a>

        <!-- CTA Button -->
        <a
          href={`tel:${SITE_CONFIG.contact.phone}`}
          class="btn-primary flex items-center gap-2"
          aria-label="Llamar ahora a Auxilios FC"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          <span>Llamar Ahora</span>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden absolute right-0 flex items-center justify-center w-10 h-10 rounded-lg hover:bg-neutral-100 transition-colors"
        aria-label="Abrir menú de navegación"
        aria-expanded="false"
      >
        <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div
      id="mobile-menu"
      class="hidden md:hidden pb-4"
    >
      <div class="flex flex-col gap-3">
        <a href="/#servicios" class="text-secondary hover:text-primary transition-colors font-medium py-2">
          Servicios
        </a>
        <a href="/#nosotros" class="text-secondary hover:text-primary transition-colors font-medium py-2">
          Nosotros
        </a>
        <a href="/blog" class="text-secondary hover:text-primary transition-colors font-medium py-2">
          Blog
        </a>
        <a href="/#testimonios" class="text-secondary hover:text-primary transition-colors font-medium py-2">
          Testimonios
        </a>
        <a href="/#contacto" class="text-secondary hover:text-primary transition-colors font-medium py-2">
          Contacto
        </a>
        <a
          href={`tel:${SITE_CONFIG.contact.phone}`}
          class="btn-primary flex items-center justify-center gap-2 mt-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          <span>Llamar Ahora</span>
        </a>
      </div>
    </div>
  </nav>
</header>

<!-- Spacer for fixed header -->
<div class="h-20"></div>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
    menuButton.setAttribute('aria-expanded', String(!isExpanded));
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking on a link
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      menuButton?.setAttribute('aria-expanded', 'false');
    });
  });

  // Smooth scroll for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', (e) => {
      e.preventDefault();
      const href = anchor.getAttribute('href');
      const target = href ? document.querySelector(href) : null;
      if (target) {
        const headerOffset = 80;
        const elementPosition = target.getBoundingClientRect().top;
        const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

        window.scrollTo({
          top: offsetPosition,
          behavior: 'smooth'
        });
      }
    });
  });
</script>
