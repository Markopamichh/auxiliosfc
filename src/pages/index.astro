---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";
import FloatingWhatsApp from "@/components/layout/FloatingWhatsApp.astro";
import Hero from "@/components/sections/Hero.astro";
import Services from "@/components/sections/Services.astro";
import WhyChooseUs from "@/components/sections/WhyChooseUs.astro";
import Gallery from "@/components/sections/Gallery.astro";
import Testimonials from "@/components/sections/Testimonials.astro";
import CoverageMap from "@/components/sections/CoverageMap.astro";
import ContactForm from "@/components/sections/ContactForm.astro";
import { SITE_CONFIG } from "@/config/site";
import { BLOG_POSTS } from "@/config/blog-posts";

const latestPosts = BLOG_POSTS.slice(0, 3);
---

<BaseLayout
  title={SITE_CONFIG.title}
  description={SITE_CONFIG.description}
>
  <Header />

  <main>
    <Hero />
    <Services />
    <WhyChooseUs />
    <Gallery />

    <!-- Blog Section -->
    <section class="section bg-white">
      <div class="container-custom">
        <div class="text-center mb-12">
          <h2 class="section-title">
            Artículos y Consejos Útiles
          </h2>
          <p class="section-subtitle">
            Guías prácticas sobre auxilio mecánico, grúas y cuidado vehicular en Neuquén
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {latestPosts.map(post => (
            <article class="bg-gray-50 rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow">
              <a href={`/blog/${post.slug}`}>
                <img
                  src={post.image}
                  alt={post.title}
                  class="w-full h-48 object-cover"
                />
              </a>
              <div class="p-6">
                <span class="bg-primary text-white px-3 py-1 rounded-full text-xs font-semibold">
                  {post.category}
                </span>
                <h3 class="text-xl font-bold text-secondary mt-3 mb-3 hover:text-primary transition">
                  <a href={`/blog/${post.slug}`}>
                    {post.title}
                  </a>
                </h3>
                <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                  {post.description}
                </p>
                <a
                  href={`/blog/${post.slug}`}
                  class="text-primary font-semibold hover:underline inline-flex items-center gap-2 text-sm"
                >
                  Leer más
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>

        <div class="text-center mt-12">
          <a href="/blog" class="btn-secondary">
            Ver Todos los Artículos
          </a>
        </div>
      </div>
    </section>

    <Testimonials />
    <CoverageMap />
    <ContactForm />
  </main>

  <Footer />
  <FloatingWhatsApp />
</BaseLayout>
