---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";
import FloatingWhatsApp from "@/components/layout/FloatingWhatsApp.astro";
import { BLOG_POSTS } from "@/config/blog-posts";

const title = "Blog de Auxilios FC - Consejos y Guías sobre Grúas y Auxilio Mecánico";
const description = "Consejos útiles, guías prácticas y artículos sobre grúas, auxilio mecánico y mantenimiento vehicular en Neuquén.";
---

<BaseLayout title={title} description={description}>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class=".bg-gradient-to-br from-primary to-orange-600 text-white py-20">
      <div class="container-custom">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">
            Blog de Auxilios FC
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-orange-100">
            Consejos, guías y artículos útiles sobre auxilio mecánico, grúas y cuidado vehicular en Neuquén
          </p>
        </div>
      </div>
    </section>

    <!-- Blog Posts Grid -->
    <section class="section bg-white">
      <div class="container-custom">
        <div class="grid md:grid-cols-2 gap-8">
          {BLOG_POSTS.map(post => (
            <article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
              <a href={`/blog/${post.slug}`}>
                <img
                  src={post.image}
                  alt={post.title}
                  class="w-full h-64 object-cover"
                />
              </a>
              <div class="p-6">
                <div class="flex items-center gap-4 text-sm text-gray-600 mb-3">
                  <time datetime={post.date}>
                    {new Date(post.date).toLocaleDateString('es-AR', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                  <span>•</span>
                  <span class="bg-primary text-white px-3 py-1 rounded-full text-xs font-semibold">
                    {post.category}
                  </span>
                </div>
                <h2 class="text-2xl font-bold text-secondary mb-3 hover:text-primary transition">
                  <a href={`/blog/${post.slug}`}>
                    {post.title}
                  </a>
                </h2>
                <p class="text-gray-600 mb-4">
                  {post.description}
                </p>
                <a
                  href={`/blog/${post.slug}`}
                  class="text-primary font-semibold hover:underline inline-flex items-center gap-2"
                >
                  Leer más
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section bg-gray-50">
      <div class="container-custom text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-secondary mb-6">
          ¿Necesitás Auxilio Mecánico Ahora?
        </h2>
        <p class="text-xl text-gray-700 mb-8 max-w-2xl mx-auto">
          Estamos disponibles las 24 horas para asistirte en cualquier emergencia vehicular en Neuquén
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/#contacto" class="btn-primary">
            Solicitar Servicio
          </a>
          <a href="tel:+542995837777" class="btn-secondary">
            Llamar: 0299-5837777
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <FloatingWhatsApp />
</BaseLayout>

<style>
  article {
    transition: transform 0.3s ease;
  }

  article:hover {
    transform: translateY(-5px);
  }
</style>
